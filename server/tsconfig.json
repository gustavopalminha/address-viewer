{
  "compilerOptions": {
    /* --- Build Target --- */
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",

    /* --- Production-Ready Strictness --- */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* --- Type Declarations --- */
    "types": ["node", "jest"],

    /* --- Module Resolution & Interoperability --- */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* --- Debugging --- */
    "sourceMap": true
  },
  "ts-node": {
    // This ensures 'ts-node' (used by 'npm run dev')
    // respects our CommonJS module setting.
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}